extends ../layout/common

block content
  h1.text-center Welcome to Books CodersX App
  form(action="/books/search", method="GET").text-center
    input(name="q" type="text").form-control.w-50.mx-auto
    button.btn.btn-primary.mt-4 Search
block products
  .container
    .row
      each product in products
        .col-4.col-md-3.col-sm-4
          .card(style='width: 10rem;')
            img.card-img-top(src=product.coverUrl, width="128" height="128")
            .card-body
              h5.card-title= product.title
              p.card-text= product.description
              a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart