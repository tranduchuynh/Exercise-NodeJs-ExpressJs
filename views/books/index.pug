extends ../layout/common

block content
  h1.text-center Books App
  h3.text-center
    a(href="/books/create").badge.badge-primary  New Book
  form(action="/books/search", method="GET").text-center
    input(name="q" type="text").form-control.w-50.mx-auto
    button.btn.btn-primary.mt-4 Search
  table.table.table-dark.table-bordered.text-center.mx-auto(style="width: 50%;")
    thead
      tr
        th Cover
        th Books
        th(colspan="3") Options
    tbody
      each book in books
        tr
          td
            img(src=book.coverUrl width="32" height="32")
          td=book.title
          td
            a(href="/books/" + book.id).badge.badge-primary View
          td
            a(href="/books/" + book.id + "/edit").badge.badge-primary Edit
          td
            a(href="/books/" + book.id + "/delete").badge.badge-danger Delete
            
block pagination
    nav(aria-label='Page navigation example')
      ul.pagination.justify-content-center
        li.page-item
          a.page-link(href='/books?page=1', aria-label='Previous')
            span(aria-hidden='true') &laquo;
            span.sr-only Previous
          each total, index in totalBooks
            li.page-item(class= page - 1 === index ? 'active': '')
              a.page-link(href=`/books?page=${index + 1}`)= index + 1  
        li.page-item
          a.page-link(href=`/books?page=${totalBooks.length}`, aria-label='Next')
            span(aria-hidden='true') &raquo;
            span.sr-only Next
              
              
          
            