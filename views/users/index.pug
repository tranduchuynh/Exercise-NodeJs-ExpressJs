extends ../layout/common

block content
  h1.text-center Books App
  h3.text-center
    a(href="/users/create") New User
  form(action="/users/search", method="GET").text-center
    input(name="q" type="text").form-control.w-50.mx-auto
    button.btn.btn-primary.mt-4 Search
  table.table.table-dark.table-bordered.text-center.mx-auto(style="width: 50%")
    thead
      tr
        th ID
        th Users
        th Options
    tbody
      each user in users
        tr
          td=user.id
          td=user.name
          td
            span
              a(href="/users/" + user.id) View
            span  / 
            span
              a(href="/users/edit/" + user.id) Edit
            span  / 
            span
              a(href="/users/delete/" + user.id) Delete
            