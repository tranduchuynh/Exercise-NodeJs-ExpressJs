extends ../layout/common

block content
  h1.text-center Edit Books
  form(action=`/users/edit/${user.id}` method="POST").text-center
    div(style="margin-bottom: 10px")
      label(style="display: block") Name:
      input(name="name" type="text" value=`${user.name}`).form-control.w-50.mx-auto 
    div(style="margin-bottom: 10px")
      label(style="display: block") Phone:
      input(name="phone" type="text" value=`${user.phone}`).form-control.w-50.mx-auto 
    div
      button.btn.btn-primary Edit