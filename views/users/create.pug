extends ../layout/common

block content
  h1.text-center Create User
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action="/users/create" method="POST" enctype="multipart/form-data").text-center
    div(style="margin-bottom: 10px")
      label(style="display: block") Name:
      input(name="name" type="text" value=values ? values.name : "").form-control.w-50.mx-auto
    div(style="margin-bottom: 10px")
      label(style="display: block") Email:
      input(name="email" type="text" value=values ? values.email : "").form-control.w-50.mx-auto
    div(style="margin-bottom: 10px")
      label(style="display: block") Password:
      input(name="password" type="password" value=values ? values.password : "").form-control.w-50.mx-auto
    div(style="margin-bottom: 10px")
      label(style="display: block") Avatar:
      input(name="avatar" type="file").form-control-file.w-50.mx-auto
    div
      button.btn.btn-primary.mt-3 Create